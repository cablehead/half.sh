#!/bin/bash

set -e
set -u

export BIN=$(realpath $(dirname $0))
export TMPDIR=$(mktemp -d)
export HSH_TRAP=1
export PAUSE="sleep 0.5"

T=$(realpath $1)

trap "rm -rf $TMPDIR" EXIT
trap "exit" INT TERM
trap "kill 0" EXIT


if [[ -d $T/P ]] ; then
  cp -a $T/P $TMPDIR
  cd $TMPDIR
else
  cd $TMPDIR
  mkdir P
  touch P/stream
fi

$BIN/serve P &
open -g http://localhost:8000
sleep 0.5

$T/run

# clone this test's results as the start for a new test
if [[ $# -gt 1 ]] ; then
  mkdir -p test/$2
  cp -a $TMPDIR/P test/$2/
  echo copied.
  exit
fi

echo finished.
sleep 10000
