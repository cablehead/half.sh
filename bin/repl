#!/bin/bash


BIN=$(dirname $0)

trap "stty sane; kill 0" EXIT


while true ; do
    IFS= read -s -r -d '' -n 1 K
    S=$(cat $1/selected)

    case $K in
    "?")
        echo $S
        ;;
    "h")
        $BIN/select $1 left
        ;;
    "l")
        $BIN/select $1 right
        ;;
    "k")
        $BIN/select $1 up
        ;;
    "j")
        $BIN/select $1 down
        ;;
    "I")
        $BIN/insert $1
        ;;
    "|")
        $BIN/pipe $1
        ;;
    " ")
        $BIN/run $1
        ;;
    "r")
        NAME=$1/node/$S/refresh
	read -e -p "refresh interval: " N
	test -z $N && rm -f $NAME || echo $N > $NAME
        ;;
    "d")
        $BIN/delete $1
        ;;
    $'\n')
        trap "exit" INT TERM
        $BIN/watch $1 &
        vi $1/node/$S/run
        jobs -p | xargs kill
	sleep 0.5
        trap - INT TERM
        ;;
    *)
        echo "[$K]"
        ;;
    esac
done
