#!/bin/bash


BIN=$(dirname $0)

trap "exit" INT TERM
trap "stty sane; kill 0" EXIT

open -g http://localhost:8000

while true ; do
    IFS= read -s -r -d '' -n 1 K
    S=$(cat $1/selected)

    case $K in
    "?")
        echo $S
        ;;
    "h")
        $BIN/select $1 left
        ;;
    "l")
        $BIN/select $1 right
        ;;
    "k")
        $BIN/select $1 up
        ;;
    "j")
        $BIN/select $1 down
        ;;
    "I")
        $BIN/insert $1
        ;;
    "|")
        $BIN/pipe $1
        ;;
    " ")
        $BIN/run $1
        ;;
    $'\n')
        $BIN/watch $1 &
        vi $1/node/$S/run
        jobs -p | xargs kill
        ;;
    *)
        echo "[$K]"
        ;;
    esac
done
