#!/bin/bash


export BIN=$(realpath $(dirname $0))

trap "stty sane" EXIT

export ROOT=$1


editor() {
  trap "exit" INT TERM
  $BIN/watch $ROOT/P/N &
  vi $ROOT/P/N/run
  jobs -p | xargs kill
  sleep 0.5
  trap - INT TERM
}

while true ; do
    IFS= read -s -r -d '' -n 1 K

    case $K in
    "H")
        $BIN/project-select $1/P left
        ;;
    "L")
        $BIN/project-select $1/P right
        ;;
    "I")
        $BIN/new $1
        $BIN/insert $1/P
        ;;
    "D")
        $BIN/project-delete $1/P
        ;;
    ",")
        read -e -p "project name: " N
        test -z $N || $BIN/project-rename $1/P "$N"
        ;;

    "h")
        $BIN/select $1/P/N left
        ;;
    "l")
        $BIN/select $1/P/N right
        ;;
    "k")
        $BIN/select $1/P/N up
        ;;
    "j")
        $BIN/select $1/P/N down
        ;;

    "i")
        $BIN/insert $1/P
        ;;
    "|")
        $BIN/pipe $1/P/N
        editor
        ;;
    " ")
        $BIN/run $1/P/N
        ;;
    "p")
        T=$1/pause
        if [[ -f $T ]] ; then
          echo "unpause"
          rm -f $T
        else
          echo "pause"
          touch $T
        fi
        ;;
    "r")
        read -e -p "refresh interval: " N
        test -z $N && rm -f $1/P/N/refresh || echo $N > $1/P/N/refresh
        ;;
    "d")
        $BIN/delete $1/P/N
        ;;
    "c")
        $BIN/clone $1/P/N
        ;;
    "*")
      T=$1/P/N/starred
      if [[ -f $T ]] ; then
        echo "unstar"
        rm -f $T
      else
        echo "star"
        touch $T
      fi
      $BIN/tree node $1/P/N >> $1/stream
      ;;
    $'\n')
      editor
      ;;
    *)
        echo "[$K]"
        ;;
    esac
done
