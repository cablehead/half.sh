#!/bin/bash

export BIN=$(realpath $(dirname $0))

test -z $1 && ROOT=~/.half.sh || ROOT=$1

if [[ -z "$HSH_TRAP" ]] ; then
    echo "setting trap"
    trap "exit" INT TERM
    trap "kill 0" EXIT
fi

mkdir -p $ROOT/project
touch $ROOT/stream

$BIN/i $ROOT serve &
$BIN/refresh $ROOT &

[[ ! -e $ROOT/P ]] && ( sleep 0.1 ; $BIN/new $ROOT; $BIN/insert $ROOT/P )

websocketd --staticdir=$(dirname $0)/../www/dist --port 8000 \
    -- sh -c "($BIN/tree root $ROOT; tail -n0 -F $ROOT/stream)"
