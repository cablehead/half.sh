#!/bin/bash

cd $TMPDIR
mkdir P
touch P/stream

sh -c "$BIN/serve P &"
open -g http://localhost:8000
sleep 1

$BIN/insert P
$BIN/select P up    # nowhere to go

$PAUSE
$BIN/pipe P
$BIN/select P down  # nowhere to go
$PAUSE
$BIN/select P up
$PAUSE
$BIN/select P down

$PAUSE
echo wc | $BIN/cat P
$PAUSE
echo wc -l | $BIN/cat P

$PAUSE
$BIN/select P up
echo ls -l | $BIN/cat P

$PAUSE
$BIN/select P down

sleep 1
open -g http://localhost:8000

sleep 100
echo finished
